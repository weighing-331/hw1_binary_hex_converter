def decimal_to_binary(n):
    if n == 0:
        return "0"
    binary = "" 
    while n > 0:
        binary = str(n % 2) + binary
        n = n // 2
    return binary

def decimal_to_octal(n):
    if n == 0:
        return "0"
    octal = "" 
    while n > 0:
        octal = str(n % 8) + octal
        n = n // 8
    return octal

decimal = int(input("Enter a decimal number: "))

binary_output = decimal_to_binary(decimal)
print("Binary:", binary_output)

octal_output = decimal_to_octal(decimal)
print("Octal:", octal_output)
